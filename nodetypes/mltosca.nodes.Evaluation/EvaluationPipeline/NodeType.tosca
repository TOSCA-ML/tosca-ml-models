tosca_definitions_version: tosca_simple_yaml_1_3

node_types:
  mltosca.nodes.Evaluation.EvaluationPipeline:
    derived_from: mltosca.nodes.Evaluation
    metadata:
      targetNamespace: "mltosca.nodes.Evaluation"
      abstract: "false"
      final: "false"
    attributes:
      function_id:
        type: string
        default: "evaluation"
    capabilities:
      host:
        occurrences: [ 1, UNBOUNDED ]
        type: mltosca.capabilities.Evaluation
    requirements:
      - host:
          capability: tosca.capabilities.Compute
          relationship: tosca.relationships.HostedOn
          occurrences: [ 1, 1 ]
    interfaces:
      Standard:
        type: tosca.interfaces.node.lifecycle.Standard
        operations:
          configure:
            description: The standard configure operation
            inputs:
              project_location:
                type: string
                required: false
                default: { get_attribute: [ SELF, project_location ] }
              output_folder:
                type: string
                required: true
                default: { get_attribute: [ SELF, function_id ] }
            implementation:
              primary: configure
              timeout: 0
    artifacts:
      configure:
        type: radon.artifacts.Ansible
        file: configure.yml
      script:
        type: tosca.artifacts.Implementation.Python
        file: script.py
