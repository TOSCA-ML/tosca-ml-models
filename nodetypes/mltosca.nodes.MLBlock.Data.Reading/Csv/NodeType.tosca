tosca_definitions_version: tosca_simple_yaml_1_3

node_types:
  mltosca.nodes.MLBlock.Data.Reading.Csv:
    derived_from: mltosca.nodes.Data
    metadata:
      targetNamespace: "mltosca.nodes.MLBlock.Data.Reading"
      abstract: "false"
      final: "false"
    attributes:
      function_id:
        type: string
        default: "read_csv"
    properties:
      filepath:
        type: string
    requirements:
      - host:
          capability: mltosca.capabilities.Compute
          node: mltosca.nodes.Data
          relationship: tosca.relationships.HostedOn
          occurrences: [ 1, 1 ]
    interfaces:
      Standard:
        type: tosca.interfaces.node.lifecycle.Standard
        operations:
          create:
            description: The standard create operation
            inputs:
              filepath:
                type: string
                required: true
                default: { get_property: [ SELF, filepath ] }
            implementation:
              primary: create
              timeout: 0
    artifacts:
      create:
        type: radon.artifacts.Ansible
        file: RunPython.yml
      ReadCSV:
        type: tosca.artifacts.File
        file: ReadCSV.py
