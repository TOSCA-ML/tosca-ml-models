tosca_definitions_version: tosca_simple_yaml_1_3

node_types:
  mltosca.nodes.Sklearn.RandomForestClassifier:
    derived_from: mltosca.nodes.Sklearn
    metadata:
      targetNamespace: "mltosca.nodes.Sklearn"
      abstract: "false"
      final: "false"
    attributes:
      function_id:
        type: string
        default: { get_attribute: [ SELF, tosca_id ] }
    properties:
      criterion:
        type: string
        default: "gini"
      min_samples_split:
        type: integer
        default: 2
      max_depth:
        type: integer
        default: 3
      n_estimators:
        type: integer
        default: 100
    interfaces:
      Standard:
        type: tosca.interfaces.node.lifecycle.Standard
        operations:
          create:
            description: The standard create operation
            inputs:
              data_folder:
                type: string
                required: true
                default: { get_attribute: [ SELF, data_folder ] }
              output_folder:
                type: string
                required: true
                default: { get_attribute: [ SELF, function_id ] }
              project_location:
                type: string
                required: false
                default: { get_attribute: [ SELF, project_location ] }
              criterion:
                type: string
                required: true
                default: { get_property: [ SELF, criterion ] }
              min_samples_split:
                type: integer
                required: true
                default: { get_property: [ SELF, min_samples_split ] }
              max_depth:
                type: integer
                required: true
                default: { get_property: [ SELF, max_depth ] }
              n_estimators:
                type: integer
                required: true
                default: { get_property: [ SELF, n_estimators ] }
              target:
                type: string
                required: true
                default: { get_property: [ SELF, target ] }
            implementation:
              primary: create
              timeout: 0
    artifacts:
      create:
        type: radon.artifacts.Ansible
        file: create.yml
      script:
        type: tosca.artifacts.File
        file: script.py
